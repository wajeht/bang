{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "removeComments": true,

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,

        /* If transpiling with TypeScript: */
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "dist",
        "baseUrl": "./src",
        "rootDir": "./",
        "sourceMap": true,

        /* If your code doesn't run in the DOM: */
        "lib": ["es2022"]
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.mts",
        "**/*.test.mjs",
        "**/*.test.js",
        "**/*.spec.ts",
        "**/*.browser-test.ts",
        "src/tests/**/*",
        "scripts/load-test.ts",
        "dist",
        "coverage",
        "public",
        "test",
        "vitest.config.ts"
    ]
}
