{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"esModuleInterop": true,
		// "allowSyntheticDefaultImports": true,
		// "allowImportingTsExtensions": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": [
			"unplugin-icons/types/vue",
			"node",
			"./node_modules/@types/node",
			"vite/client",
			"vitest/globals"
		],
		// "declaration": true,
		// "declarationMap": true,
		// "composite": true,
		// "incremental": true,
		"outDir": "dist",
		// "noEmit": true,
		// "sourceMap": true,
		// "lib": ["ES2020", "DOM", "DOM.Iterable"],
		// "useDefineForClassFields": true,
		"strict": true,
		"skipLibCheck": true
		// "jsx": "preserve",
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		// "noFallthroughCasesInSwitch": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.json", "./src/**/*.d.ts", "./src/**/*.vue", ".env"],
	"exclude": [
		"./dist/**/*",
		"./node_modules",
		"./logs",
		"./src/**/*.spec.ts",
		"./src/**/*.test.ts",
		".adminjs",
		".vscode",
		"./mongo-data",
		"./src/views/main.ts",
		"./src/views/router.ts",
		"./public"
	]
}
