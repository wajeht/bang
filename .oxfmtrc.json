{
    "$schema": "./node_modules/oxfmt/configuration_schema.json",
    "tabWidth": 4,
    "semi": true,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "printWidth": 100,
    "ignorePatterns": [
        "src/database/db.sqlite",
        "node_modules",
        "coverage",
        "logs",
        "mongo-data",
        "coverage*/",
        "lib/",
        "pnpm-lock.yaml",
        ".all-contributorsrc",
        "package-lock.json",
        "src/views/components.d.ts",
        "src/views/auto-imports.d.ts",
        "backup/*",
        "backup*",
        "./src/index.js",
        "/dist",
        "db.sqlite",
        "db.sqlite-shm",
        "db.sqlite-wal",
        "./src/database/db.sqlite",
        "./src/db/db.sqlite",
        "./public/js/*",
        "/public/js/*",
        "src/routes/**/*.html"
    ]
}
