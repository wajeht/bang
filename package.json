{
	"name": "bang",
	"version": "0.0.1",
	"description": "DuckDuckGo's !Bangs, but on steroids.",
	"main": "./src/server.ts",
	"scripts": {
		"start": "npx prisma generate && npx prisma migrate deploy && node ./dist/src/server.js",
		"dev": "concurrently --kill-others --names \"EXPRESS,VUE\" -c \"bgGreen.black,bgYellow.black\" \"npm run dev:api\" \"npm run dev:ui\"",
		"dev:docker": "npx prisma generate && npx prisma db push && npm run dev",
		"dev:api": "tsx watch --clear-screen=false ./src/server.ts",
		"dev:ui": "vite",
		"build": "npm run build:ui && npm run build:api",
		"build:ui": "vite build",
		"build:api": "tsc",
		"update:deps": " npx npm-check -u",
		"check:deps": "npx depcheck",
		"format:check": "prettier --check .",
		"format": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint --fix .",
		"test:watch": "vitest",
		"test": "vitest --run",
		"prepare": "husky install",
		"db:push": "npx prisma db push",
		"db:generate": "npx prisma generate",
		"db:migrate": "npx prisma migrate dev",
		"db:reset": "npx prisma migrate reset --force",
		"db:seed": "tsx ./src/database/seeds/seed.ts"
	},
	"keywords": [
		"search",
		"bookmark",
		"sync",
		"wajeht"
	],
	"prisma": {
		"schema": "./src/database/schema.prisma",
		"seed": "tsx ./src/database/seeds/seed.ts"
	},
	"author": "wajeht",
	"license": "MIT",
	"dependencies": {
		"@formkit/auto-animate": "^0.8.1",
		"@prisma/client": "^5.9.1",
		"@vueuse/core": "^10.7.2",
		"@vueuse/router": "^10.7.2",
		"axios": "^1.6.7",
		"bcryptjs": "^2.4.3",
		"compression": "^1.7.4",
		"concurrently": "^8.2.2",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.4",
		"express": "^4.19.2",
		"express-async-handler": "^1.2.0",
		"helmet": "^7.1.0",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"minio": "^7.1.3",
		"nodemailer": "^6.9.9",
		"pinia": "^2.1.7",
		"pinia-plugin-persistedstate": "^3.2.1",
		"puppeteer": "^22.13.1",
		"sharp": "^0.32.6",
		"vue": "^3.3.4",
		"vue-router": "^4.2.5",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.4.1",
		"@fireworks-js/vue": "^2.10.7",
		"@iconify/json": "^2.2.182",
		"@tailwindcss/typography": "^0.5.10",
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/vue": "^7.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/compression": "^1.7.5",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "^20.11.17",
		"@types/nodemailer": "^6.4.14",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitejs/plugin-vue": "^4.6.2",
		"autoprefixer": "^10.4.17",
		"daisyui": "^3.9.4",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"npm": "^10.8.2",
		"postcss": "^8.4.35",
		"prettier": "^3.2.5",
		"prisma": "^5.9.1",
		"tailwindcss": "^3.4.1",
		"tsx": "^3.14.0",
		"typescript": "^5.3.3",
		"unplugin-icons": "^0.16.6",
		"unplugin-vue-components": "^0.25.2",
		"vite": "^4.5.3",
		"vitest": "^0.33.0",
		"vue-tsc": "^1.8.27"
	}
}
